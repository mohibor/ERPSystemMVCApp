@model ERPSystemMVCApp.Models.UserLoginModel
@{
    ViewBag.Title = "Login";
}


<form id="login-form" action="" method="post" class="needs-validation">
    <div class="row mb-3 has-validation">
        <label for="email" class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-9">
            <input id="email" type="text" name="Email" class="@(!ViewData.ModelState.IsValidField("Email") ? "is-invalid" : "") form-control @(Model != null && ViewData.ModelState.IsValidField("Email") ? "is-valid" : "")" value="@(Model != null ? Model.Email : "")" placeholder="sasuke@uchiha.com">

            @if (!ViewData.ModelState.IsValidField("Email"))
            {
                <span class="invalid-feedback" role="alert">
                    <strong>@Html.ValidationMessage("Email")</strong>
                </span>
            }
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-9">
            <input id="email" type="password" name="Password" class="@(!ViewData.ModelState.IsValidField("Password") ? "is-invalid" : "") form-control {{ @(Model != null && ViewData.ModelState.IsValidField("Password") ? "is-valid" : "")" value="@(Model != null ? Model.Password : "")" placeholder="sasuke@uchiha.com">

            @if (!ViewData.ModelState.IsValidField("Password"))
            {
                <span class="invalid-feedback" role="alert">
                    <strong>@Html.ValidationMessage("Password")</strong>
                </span>
            }
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-9 offset-sm-3">
            <button id="login-btn" type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</form>